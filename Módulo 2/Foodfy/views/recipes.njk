{% extends 'layout.njk' %}

{% block content %}

<section id="hamburger">

  {% for item in items %}
    <div class="cards">
      <div class="card" id="{{item.id}}">
        <img src="{{item.img}}" alt="">
        <h2 clsas="foodTitle">{{item.recipeTitle}}</h2>
        <p class="recipleAuthor">{{item.author}}</p>
      </div>
    </div>
  {% endfor %}
</section>

<div class="modal-overlay">
  <div class="content" id="oi">
    <img src="{{item.img}}" alt="" class="modalImg">
    <div class="modalTitle">
      <p>{{item.recipeTitle}}</p>
    </div>
    <p class="modalAuthor">{{item.author}}</p>
    <a class="closeModal">Fechar</a>
  </div>
</div>

<script src="/js/main.js"></script>

{% endblock %}