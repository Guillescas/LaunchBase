{% extends 'layout.njk' %}

{% block content %}

  <div class="title-line">
    <h1>Editando receitas</h1>
    <button class="edit-recipe_btn">Deletar</button>
    <button class="edit-recipe_btn">Salvar Receita</button>
  </div>


  <section class="edit-form">

    <div class="edit-item">
      <p>Imagem da receita</p>
      <input type="text" placeholder="https://linkDaImagem">
    </div>

    <div class="edit-item">
      <p>Ingredientes</p>
      <input type="text" placeholder="Digite um ingrediente aqui..." class="ingredient-input">
      <input type="text" placeholder="Digite um ingrediente aqui..." class="ingredient-input">
      <a href="#">Adicionar novo ingrediente</a>
    </div>

    <div class="edit-item">
      <p>Modo de preparo</p>
      <input type="text" placeholder="Digite um passo aqui..." class="step-input">
      <input type="text" placeholder="Digite um passo aqui..." class="step-input">
      <a href="#">Adicionar novo passo</a>
    </div>

    <div class="edit-item">
      <p>Modo de preparo</p>
      <input type="text" placeholder="Digite uma informação adicional ou curiosidade aqui..." class="addInfo-input">
    </div>
  
  </section>





{% endblock %}