{% extends 'layout.njk' %}

{% block content %}

<form class="present" method="POST" action="/students">
  <div class="card">
    <section
      class="img"
      style="background: url(https://source.unsplash.com/collection/2433990/500x500) no-repeat center / cover">
    </section>
    <section class="infos">
      <h3>Aluno</h3>

      <div class="item">
        <div>Avatar URL</div>
        <div>{{student.avatar_url}}</div>
      </div>

      <div class="item">
        <div>Nome</div>
        <div>{{student.name}}</div>
      </div>

      <div class="item">
        <div>Idade</div>
        <div>{{student.age}}</div>
      </div>

      <div class="item">
        <div>E-mail</div>
        <div>{{student.email}}</div>
      </div>

      <div class="item">
        <div>Ano de escolaridade</div>
        <div>{{student.schoolingYear}}</div>
      </div>

      <div class="item">
        <div>Carga horÃ¡ria semanal</div>
        <div>{{student.workload}} h</div>
      </div>

      <a class="aBtn" href="/students/{{ student.id }}/edit">Editar</a>
    </section>
  </div>
</form>



{% endblock content %}