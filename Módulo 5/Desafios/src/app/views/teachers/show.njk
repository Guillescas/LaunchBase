{% extends 'layout.njk' %}

{% block content %}

<form class="present" method="POST" action="/teachers">
  <div class="card">
    <section
      class="img"
      style="background: url(https://source.unsplash.com/collection/2433990/500x500) no-repeat center / cover">
    </section>
    <section class="infos">
    <h3>Professor</h3>

      <div class="item">
        <div>Avatar URL</div>
        <div>{{teacher.avatar_url}}</div>
      </div>

      <div class="item">
        <div>Nome</div>
        <div>{{teacher.name}}</div>
      </div>

      <div class="item">
        <div>Idade</div>
        <div>{{teacher.age}}</div>
      </div>

      <div class="item">
        <div>Grau de escolaridade</div>
        <div>{{teacher.schooling}}</div>
      </div>

      <div class="item">
        <div>Tipo de aula</div>
        <div>{{teacher.classType}}</div>
      </div>

      <div class="item">
        <div>Matérias à lecionar</div>
        {% for materia in teacher.materias %}
          <span>{{ materia }}</span>
        {% endfor %}
      </div>

      <a class="aBtn" href="/teachers/{{ teacher.id }}/edit">Editar</a>
    </section>
  </div>
</form>



{% endblock content %}